# API Gateway Service Environment Configuration Example

# Application Settings
APP_NAME=API Gateway Service
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8005
WORKERS=4

# Database Settings
DATABASE_URL=postgresql://postgres:password@postgres:5432/ingestion_db

# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000
RATE_LIMIT_BURST_SIZE=10

# Redis Settings (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# Backend Services
INGESTION_SERVICE_URL=http://localhost:8003
OCR_SERVICE_URL=http://localhost:8000
NER_SERVICE_URL=http://localhost:8001
EMBEDDING_SERVICE_URL=http://localhost:8002
QUERY_SERVICE_URL=http://localhost:8005

# Security Settings
ENABLE_CORS=true
CORS_ORIGINS=["*"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Monitoring Settings
ENABLE_METRICS=true
ENABLE_TRACING=false

# User Management
DEFAULT_USER_ROLE=user
ADMIN_USER_ROLE=admin
ENABLE_USER_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=false

# Password Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=false
